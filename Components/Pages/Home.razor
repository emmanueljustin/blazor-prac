@page "/"
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime
      
<PageTitle>Home</PageTitle>

<div class="d-none d-sm-block row">
    <div class="vh-100 w-50 d-flex align-items-center justify-content-center">
        <div class="d-none d-sm-block">
            <img class="intro-bg" src="images/model-cover.jpg" />
        </div>

        <div class="text-justify">
            <h1 class="fw-bold">Captivating Beauty</h1>
            <h1 class="fw-bold">Elegance</h1>
            <h1 class="fw-bold">Sophistication</h1>
            <MyButton OnClick="ScrollToSection" class="btn btn-dark mt-5">Learn More</MyButton>
        </div>
    </div>
</div>

<div class="d-block d-sm-none row">
    <div class="vh-100 w-100 bg-opacity-75 d-flex align-items-center justify-content-center">
        <div>
            <img class="intro-bg" src="images/man1.jpg"/>
            <div class="overlay"></div>
        </div>
        <div class="text-center text-white">
            <h1 class="fw-bold">Dazzling Moments</h1>
            <h1 class="fw-bold">Classy</h1>
            <h1 class="fw-bold">Stylish</h1>
            <MyButton OnClick="ScrollToSection" class="btn btn-outline-light mt-5">Learn More</MyButton>
        </div>
    </div>
</div>

<div class="row">
    <div id="target-section" class="px-5">
        <div class="container vh-100 w-100 d-flex align-items-center">
            <div class="row">
                <div class="col">
                    <IntroContent />
                </div>

                <div class="col d-none d-lg-flex justify-content-center">
                    <img class="w-50" src="images/IMG1.jpg" />
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="review-section col bg-opacity-50 d-flex flex-column justify-content-center align-items-center">
        <h1 class="fw-bold mb-5 text-white">Client Testimonials</h1>
        <div id="carousel-review" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <ReviewCard src="images/Faces/face1.jpg" Name="Ben Hewwit" />
                </div>
                <div class="carousel-item">
                    <ReviewCard src="images/Faces/face2.jpg" Name="Jamie Lee" />
                </div>
                <div class="carousel-item">
                    <ReviewCard src="images/Faces/face3.jpg" Name="Claire Austin" />
                </div>
            </div>
            <a class="slide-show-btn carousel-control-prev" href="#carousel-review" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="slide-show-btn carousel-control-next" href="#carousel-review" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

@code {
    private void ScrollToSection()
    {
        JSRuntime.InvokeVoidAsync("scrollToElement", "target-section");
    }
}
