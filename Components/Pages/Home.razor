@page "/"
@rendermode InteractiveServer
@inject IJSRuntime JSRuntime

<PageTitle>Home</PageTitle>

<div class="row">
    <div class="vh-100 w-50 d-flex align-items-center justify-content-center">
        <div class="d-none d-lg-block">
            <img class="intro-bg" src="images/model-cover.jpg" />
        </div>

        <div class="text-justify">
            <h1 class="fw-bold">Captivating Beauty</h1>
            <h1 class="fw-bold">Elegance</h1>
            <h1 class="fw-bold">Sophistication</h1>
            <MyButton OnClick="ScrollToSection" class="btn btn-info mt-5">Learn More</MyButton>
        </div>
    </div>

    <div id="target-section" class="px-5">
        <div class="container vh-100 w-100 d-flex align-items-center">
            <div class="row">
                <div class="col">
                    <IntroContent />
                </div>

                <div class="col d-flex justify-content-center">
                    <img class="w-50" src="images/IMG1.jpg" />
                </div>
            </div>
        </div>
    </div>

    <div class="col vh-100 d-flex flex-column justify-content-center align-items-center">
        <h1 class="fw-bold mb-5">Client Testimonials</h1>
        <div id="carousel-review" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <ReviewCard src="images/Faces/face1.jpg" Name="Ben Hewwit" />
                </div>
                <div class="carousel-item">
                    <ReviewCard src="images/Faces/face2.jpg" Name="Jamie Lee" />
                </div>
                <div class="carousel-item">
                    <ReviewCard src="images/Faces/face3.jpg" Name="Claire Austin" />
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel-review" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-review" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

@code {
    private void ScrollToSection()
    {
        JSRuntime.InvokeVoidAsync("scrollToElement", "target-section");
    }
}
